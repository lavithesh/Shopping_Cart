<div 
  class="hi" 
  style="
    background-image: url('/images/global.jpg');
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  "
>
  <div 
    class="col-md-6" 
    style="
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      color: white;
      max-width: 400px;
      width: 90%;
    "
  >
    <div class="container">
      <h2 class="text-center mb-4" style="font-style: italic; color: #ffffff;">Login</h2>

      {{#if loginErr}}
        <p style="color: #ff4d4d; text-align: center;">
          Invalid or wrong password <i class="bi bi-exclamation-circle"></i>
        </p>
      {{/if}}

      <form action="/login" method="post">
        <div class="form-group mb-3">
          <label style="font-style: italic; color: #e0e0e0;">Email address</label>
          <input 
            type="email" 
            class="form-control" 
            name="Email" 
            placeholder="Enter email" 
            required
            style="
              background-color: rgba(255,255,255,0.15);
              border: none;
              color: white;
              border-radius: 10px;
            "
          >
        </div>

        <div class="form-group mb-3">
          <label style="font-style: italic; color: #e0e0e0;">Password</label>
          <input 
            type="password" 
            class="form-control" 
            name="Password" 
            placeholder="Password"
            required
            style="
              background-color: rgba(255,255,255,0.15);
              border: none;
              color: white;
              border-radius: 10px;
            "
          >
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
          <a href="/signup" style="color: #add8e6; text-decoration: none; font-style: italic;">
            Create new account
          </a>
          <button 
            type="submit" 
            class="btn btn-primary" 
            style="
              border-radius: 10px 30px;
              padding: 8px 20px;
              background-color: #007bff;
              border: none;
              font-weight: bold;
              transition: 0.3s;
            "
            onmouseover="this.style.backgroundColor='#0056b3'"
            onmouseout="this.style.backgroundColor='#007bff'"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Optional smooth fade-in -->
<style>
.hi {
  animation: fadeIn 1.5s ease;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>
