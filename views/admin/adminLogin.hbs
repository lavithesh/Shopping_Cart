<div class="hi" style="background-image: url('/images/13.jpg'); width: 100%; height: 100vh; background-size: cover; background-position: center; display: flex; align-items: center; justify-content: center;">
  <div class="col-md-6 col-lg-4">
    <div class="container p-4 shadow-lg rounded" style="background: rgba(0, 0, 0, 0.6); border-radius: 15px;">
      <h2 class="text-center mb-4" style="font-style: italic; color: #fff;">Admin Login</h2>

      {{#if adminErr}}
      <p class="text-center" style="color: #ff6666; font-weight: bold;">Invalid Email or Password <i class="bi bi-exclamation-circle"></i></p>
      {{/if}}

      <form action="/admin/adminLogin" method="post">
        <div class="form-group mb-3">
          <label style="font-style: italic; color: white;">Email Address</label>
          <input type="email" class="form-control" name="Email" placeholder="Enter your email" required style="border-radius: 10px;">
        </div>

        <div class="form-group mb-4">
          <label style="font-style: italic; color: white;">Password</label>
          <input type="password" class="form-control" name="Password" placeholder="Enter your password" required style="border-radius: 10px;">
        </div>

        <button type="submit" class="btn btn-primary btn-block" style="border-radius: 10px; font-style: italic;">Login</button>
      </form>

      <div class="text-center mt-3">
        <a href="/admin/adminSignup" style="color: #f8f9fa; text-decoration: underline; font-style: italic;">Create Admin Account</a>
      </div>
    </div>
  </div>
</div>
