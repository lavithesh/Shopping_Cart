<!-- admin/view-users.hbs -->
<section style="background-image: url('/images/c6.jpeg'); background-size: cover; background-position: center; min-height: 100vh; padding: 40px 0;">
  <div class="container">
    <h1 class="text-center mb-4" style="font-style: oblique; color: white; text-shadow: 1px 1px 3px black;">
      All Users <i class="bi bi-people-fill"></i>
    </h1>

    <div class="table-responsive shadow-lg rounded" style="background-color: rgba(255, 255, 255, 0.9); border-radius: 15px; padding: 20px;">
      <table class="table table-bordered table-hover" id="user">
        <thead class="thead-dark">
          <tr>
            <th style="font-style: italic;">No</th>
            <th style="font-style: italic;">User ID</th>
            <th style="font-style: italic;">Name</th>
            <th style="font-style: italic;"><i class="bi bi-envelope-fill"></i> Email</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this._id}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Email}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>

<script>
  // Initialize DataTable for user listing
  $(function () {
    $('#user').DataTable({
      pageLength: 5,
      lengthMenu: [5, 10, 20],
      language: { searchPlaceholder: "Search users..." }
    });
  });
</script>
